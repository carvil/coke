<h3>Coke related tweets</h3>


<div class="row">
  <div class="span2">
    <%= link_to "Fetch more messages", {controller: :tweets, action: :load}, remote: true, class: "btn", id: "more_tweets" %>
  </div>

  <div class="span2">
    <div id="loading" class="loading-gif-none">
      <%= image_tag "loading.gif" %>
    </div>
  </div>

  <div class="span8">
    <p id="error"></p>
  </div>

</div>

<% if @tweets %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Sentiment</th>
      <th>Message</th>
      <th>User</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody id="tweets">
    <%= render @tweets %>
  </tbody>
  </table>
<% end %>
